#!/bin/bash

# Hardware Simulator shortcut script
# Usage: ./hwsim [optional_hdl_file]

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Path to the Hardware Simulator
HWSIM_PATH="$SCRIPT_DIR/logisimHDL/nand2tetris/tools/HardwareSimulator.sh"

# Check if Hardware Simulator exists
if [ ! -f "$HWSIM_PATH" ]; then
    echo "Error: Hardware Simulator not found at $HWSIM_PATH"
    exit 1
fi

# If an argument is provided, pass it to the Hardware Simulator
if [ $# -eq 1 ]; then
    echo "Opening Hardware Simulator with file: $1"
    bash "$HWSIM_PATH" "$1"
else
    echo "Opening Hardware Simulator..."
    bash "$HWSIM_PATH"
fi