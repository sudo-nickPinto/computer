/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Nand(a=a, b=b, out=nandOut1);
    Nand(a=a, b=nandOut1, out=nandOut2);
    Nand(a=nandOut1, b=b, out=nandOut3);
    Nand(a=nandOut2, b=nandOut3, out=out);
}