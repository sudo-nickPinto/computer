/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=notOut);
    And(a=a, b=notOut, out=andOut1);
    And(a=sel, b=b, out=andOut2);
    Or(a=andOut1, b=andOut2, out=out);
}